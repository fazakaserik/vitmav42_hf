<!DOCTYPE html>
<html>
    <head>
      <%- include("templates/header", {title: "All Reservations"}) -%>
    </head>
    <body>
        <%- include("templates/navbar", {active: "reservations"}) -%>

        <div class="container">
          <h1>Own Reservations</h1>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Date</th>
                <th scope="col">Reserver</th>
              </tr>
            </thead>
            <tbody>
                <% reservations.forEach(function(reservation){ %>
                  <tr>
                    <td>
                      <%= reservation.date.toLocaleDateString("hu-HU") %>
                    </td>
                    <td>
                      <%= reservation.name %>
                    </td>
                    <td>
                      <a href="/reservations/user/<%= reservation._reserver._id %>"><%= reservation._reserver.first_name + " " + reservation._reserver.last_name %></a>
                    </td>
                  </tr>
                <% }); %>
            </tbody>
          </table>
        </div>

        <%- include("templates/footer") %>
    </body>
</html>